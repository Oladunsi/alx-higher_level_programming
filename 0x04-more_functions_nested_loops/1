#include "main.h"

/**
* print_diagonal - prints a diagonal line (\) to the standard output
* @num: this the amount of lines needed to print
*
* Return: Nothing
*/

void print_diagonal(int num)
{
	int a , b;

	for (a = 0; a < num; a++)
		if (num <= 0)
		{
			_putchar('\n');
			break;
		}
		else
		{
			for (b = 0; b < a; b++)
			{
				_putchar(' ');
		
			}
		_putchar('\\');
		_putchar('\n');
		}	
}
