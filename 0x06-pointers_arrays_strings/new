#include "main.h"

/**
 * sep_finder - a function that dectects ,, ;, ., !, ?, \", (, ), {, and }
 *
 * Return: A 0 for false 1 for true
 */




/**
 * cap_string - a function that changes the first character in a string into Uppercase.
 *
 * Return: A pointer to the resulting string
 */

char *cap_string(char *str)
{
	char *tmp = str;
	
	while (*tmp++ != '\0')
	{
		if (*tmp >= 'a' && *tmp <= 'z')
			*tmp -= ('a' - 'A');
	}
	return (str);
}
